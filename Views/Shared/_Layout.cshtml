                close: true,
                url: url,
                urlType: "absolute"
            });
        }

        /**
         * Menu de pesquisa local
         */
        function search_menu() {
            //O valor para procurar
            var text = $('input[name=q]').val();

            var $ul = $('.sidebar-menu');
            $ul.find("a.nav-link").each(function () {
                var $a = $(this).css("border", "");

                //Determine se há uma string para procurar
                if ($a.children("span.menu-text").text().indexOf(text) >= 0) {

                    //Se o pai da tag a estiver oculto, expanda
                    $ul = $a.parents("ul");

                    if ($ul.is(":hidden")) {
                        $a.parents("ul").prev().click();
                    }

                    //Clique no menu
                    $a.click().css("border", "1px solid");

                    //                return false;
                }
            });
        }

