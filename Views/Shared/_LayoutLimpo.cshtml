<!DOCTYPE html>

@using System.Configuration
@using PrjUcbWeb.Utils


@*<html lang="@CultureHelper.GetCurrentNeutralCulture()" dir="@(CultureHelper.IsRighToLeft() ? "rtl" : "ltr")" style="overflow:hidden">*@
<html lang="@CultureHelper.GetCurrentNeutralCulture()" dir="@(CultureHelper.IsRighToLeft() ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>@ViewBag.Title</title>

    @Styles.RenderFormat("<link href=\"{0}?v=" + "v1.0" + "\" rel=\"stylesheet\"/>", "~/Content/csslayoutlimpo")

    <!--[if lt IE 9]>
        <script src="../assets/js/ie8-responsive-file-warning.js"></script>
        <![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Favicons -->
    <link rel="shortcut icon" href="~/images/favicon/favicon.png" type="image/x-icon" />
    <link href="~/images/favicon/favicon.png" rel="shortcut icon">
    <link href="~/images/favicon/apple-touch-icon-57-precomposed.png" rel="apple-touch-icon">
    <link href="~/images/favicon/apple-touch-icon-72-precomposed.png" rel="apple-touch-icon" sizes="72x72">
    <link href="~/images/favicon/apple-touch-icon-144-precomposed.png" rel="apple-touch-icon" sizes="114x114">

    @RenderSection("styles", required: false)

    @RenderSection("variaveis", required: false)

    <script>
        var baseUrl = 'localhost';
        var username = '@HttpContext.Current.User.Identity.Name.ToString()';

        var appName = 'PrjUcbWeb';
    </script>

    <script src="~/Content/DataTables/datatable.variaveis.js"></script>
</head>
<body class="hold-transition skin-blue sidebar-mini">

    <!-- /.content-wrapper -->
    <!-- /.control-sidebar -->
    <!-- Add the sidebar's background. This div must be placed
    immediately after the control sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/app.js"></script>
    <!-- FontAwesome -->
    <script src="~/Scripts/all.js"></script>
    <!-- Validate Bootstrap-->
    <script src="~/Scripts/bootstrap-validate.js"></script>
    <!-- Popper-->
    <script src="~/Scripts/popper.min.js"></script>
    @RenderBody()


    @Styles.RenderFormat("<link href=\"{0}?v=" + "v1.0" + "\" rel=\"stylesheet\"/>", "~/bundles/jslayoutlimpo")

    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <script type="text/javascript">
        $(document).ready(function () {

            var erros = @HtmlExtensions.GetStringToast(Html.ValidationSummary());
            var i;
            for (i = 0; i < erros.length; i++) {
                if (erros[i] != "S" && erros[i] != "N") {
                    Notificar("Atenção!", erros[i], "warning");
                }
            }

        });
        </script>
    }

    @if (TempData["INFOS"] != null)
    {
        if (((List<String>)TempData["INFOS"]).Count > 0)
        {
            <script type="text/javascript">
                $(document).ready(function () {

                    QueueNotificar(@Html.Raw(Json.Encode(TempData["INFOS"])))
                });
            </script>
        }
    }

    @RenderSection("scripts", required: false)

</body>
</html>
